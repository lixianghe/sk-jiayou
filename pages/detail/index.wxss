/* 视频详情区域 */

.page {
  overflow: hidden;
  display: flex;
  flex-direction: column;
  height: 100vh;
}

.video-box {
  overflow: hidden;
  width: 100vw;
  height: 66.346vh;
  position: relative;
}

/* 左侧视频摘要信息窗口 */

.video-info {
  overflow: hidden;
  width: 169.231vh;
  height: 100%;
  padding-left: 63.462vh;
  position: relative;
}

/* 封面图窗口 */

.video-cover {
  width: 62.821vh;
  height: 100%;
  padding: 2.724vh 8.974vh;
  position: absolute;
  /* z-index: 9; */
  left: 0;
  top: 0;
}

.video-cover-shadow {
  box-shadow: 0 0 3.077vh rgba(0, 0, 0, 0.3);
}

.video-cover image {
  width: 100%;
  height: 100%;
  border-radius: 4rpx;
  box-shadow: 0 0 6.154vh rgba(0, 0, 0, 0.2);
}

.video-baseinfo {
  padding: 5.929vh 12.821vh 0 0;
  font-size: 5.769vh;
  position: relative;
  line-height: 6.731vh;
}

.video-baseinfo view {
  opacity: 0.6;
}

.video-baseinfo .video-title {
  font-size: 7.692vh;
  /* font-weight: 450; */
  /* font-weight: bold; */
  opacity: 1;
}

.video-baseinfo .video-fen {
  opacity: 1;
  color: #ffbf00;
  position: absolute;
  right: 12.308vh;
  top: 19.551vh;
}

.video-fen-size {
  font-size: 18.462vh;
  font-weight: 500;
  margin-right: 4rpx;
}

.video-baseinfo .video-tags {
  margin-top: 5.929vh;
}

.video-baseinfo .video-time {
  margin-top: 2.724vh;
}

.video-baseinfo .video-stardom {
  margin-top: 8.654vh;
  line-height: 9vh;
  overflow: hidden;
  text-overflow: ellipsis;
  display: -webkit-box;
  -webkit-line-clamp: 2;
  -webkit-box-orient: vertical;
}

/* 右侧视频详细信息窗口 */

/* 浮动层级在视频封面之下(小于9) */

.video-move-card {
  /* width: 476.923vh; */
  height: 100%;
  position: absolute;
  z-index: 8;
  top: 0;
  left: 0;
}

/* 定位左侧位置0 */

.video-move-card-left {
  left: -169.231vh;
}

.video-detail {
  width: 100vw;
  height: 100%;
  padding:5.929vh 5.974vh 2.724vh 0;
  padding-left: 117.147vh;
  position: relative;
  display: flex;
  flex-direction: column;
}

.detail-scroll {
  overflow: hidden;
  width: 100%;
  height: 80%;
  margin-top: 4vh;
}

::-webkit-scrollbar {
  width: 4px;
  height: 4px;
  color: #3d3f52;
}

::-webkit-scrollbar-thumb {
  background-color: rgba(255, 255, 255, 0.2);
}

/*定义滚动条高宽及背景 高宽分别对应横竖滚动条的尺寸*/
.light ::-webkit-scrollbar {
  color: #3d3f52;
}

/*定义滑块 内阴影+圆角*/
.light ::-webkit-scrollbar-thumb {
  background-color: #ccc;
}

.no-video {
  padding-left: 0;
}

.detail-cover {
  width: 117.147vh;
  height: 100%;
  padding: 2.724vh 8.974vh;
  position: absolute;
  left: 0;
  top: 0;
}

.video-image{
  width: 100%;
  height: 100%;
  border-radius: 4rpx;
}

.video {
  width: 100%;
  height: 100%;
  border-radius: 4rpx;
}

.detail-cover .play-btn-container {
  width: 22.115vh;
  height: 22.115vh;
  position: absolute;
  top: 50%;
  left: 50%;
  border-radius: 0;
  transform: translate(-50%, -50%);
  display: flex;
  align-items: center;
  justify-content: center;
}

.detail-cover .play-btn {
  width: 14.103vh;
  height: 14.103vh;
}

.no-video .detail-cover {
  display: none;
}

.detail-title {
  /* font-weight: bold; */
  font-size: 7.692vh;
}

