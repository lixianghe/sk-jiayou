  content: "";
  position: absolute;
  left: 0;
  bottom: 0;
  width: 100%;
  height: 4px;
  overflow: hidden;
  background: linear-gradient(90deg, rgba(0, 0, 0, 0), #1d8dff 43%, #1d8dff 67%, rgba(0, 0, 0, 0));
  z-index: 10;
}

