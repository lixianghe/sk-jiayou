/* 影院信息区域 */

.cinema-box {
  overflow: hidden;
  width: 100vw;
  /* height: 33.654vh; */
  flex:1;
  border-top: solid 2px #212733;
  position: relative;
}
/* 影院信息区域 scroll*/
.cinema-scroll {
  /* height:33.654vh; */
  height: 100%;
  width:100%;
  white-space:nowrap
}
/* 滑动区窗口 */

.cinema-bar {
  height: 100%;
  white-space: nowrap;
  /* overflow: auto; */
  position: absolute;
  left: 0;
  top: 0;
}

/* 每一个影院窗口尺寸 */

.cinema-card {
  display: inline-block;
  width: 112.500vh;
  height: 100%;
  position: relative;
}

