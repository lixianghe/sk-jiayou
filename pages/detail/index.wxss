.cinema-item {
  /* padding: 4.923vh 7.385vh; */
  padding-left: 30.128vh;
  position: relative;
  height: 100%;
  display: flex;
  flex-direction: column;
  justify-content: center;
  padding-right: 11.218vh;
}

.cinema-icon {
  text-align: center;
  position: absolute;
  left: 8.333vh;
  top: 6.410vh;
  display: flex;
  align-items: center;
  flex-direction: column;
  justify-content: center;
}

.cinema-icon image {
  display: block;
  width: 7.692vh;
  height: 7.692vh;
  padding: 3.077vh;
  background-color: rgb(62, 143, 255);
  border-radius: 50%;
  margin-bottom: 1vh;
}

.cinema-km {
  opacity: 0.6;
  font-size: 4.308vh;
}

.cinema-title {
  font-size: 5.769vh;
  /* font-weight: bold; */
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
}

.cinema-tags {
  margin-top: 3vh;
  height: 7vh;
  font-size: 4.308vh;
  display: flex;
  flex-direction: row;
}

.cinema-tags text {
  color: #66b3ff;
  border: #66b3ff solid 1rpx;
  border-radius: 2rpx;
  padding: 0 4rpx;
  margin-right: 8rpx;
  display: flex;
  vertical-align: center;
  align-items: center;
  justify-content: center;
}

.cinema-add {
  margin-top: 2vh;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
  font-size: 4.492vh;
  opacity: 0.6;
}

.cinema-seg {
  margin-left: 1.2vh;
  margin-right: 1.2vh;
  background: #494e5e;
  width: 0.5vh;
  height: 3.6vh;
}

.cinema-address {
  overflow: hidden;
  white-space: nowrap;
  text-overflow: ellipsis;
}

.scroll-view-bar {
  display: flex;
  flex-direction: row;
  align-items: center;
}

.line-ver{
  width: 2px;
  height: 66%;
  position: absolute;
  top: 17%;
  left: 0;
  background-color: #313747;
}

/* 白天模式 */

.light {
  color: #525666;
}

.light .cinema-box {
  background: rgba(255, 255, 255, 0.3);
  border-color: rgba(255, 255, 255, 0.3);
}

.light .cinema-card::after {
  border-color: #edf0f6;
}

.light .cinema-tags text {
  background-color: rgba(59, 135, 249, 0.1);
  border-color: rgba(59, 135, 249, 0.03);
}
.light  .line-ver{
  background-color: #e2e4e8;
}
/* 夜间模式 */

.dark {
  color: rgba(255, 255, 255, 1);
}
.dark  .line-ver{
  background-color: #313747;
}

.play-btn-container[focus-select=true][focus-bg=true] {
  background-image: linear-gradient(rgba(37, 128, 255, 0), rgba(33, 137, 255, 0.45));
  border: 0.641vh solid #1f8eff;
}

.video[focus-select=true] {
  background-image: linear-gradient(rgba(37, 128, 255, 0), rgba(33, 137, 255, 0.45));
  border: 0.641vh solid #1f8eff;
}

.wx-video-cover-play-button[focus-select=true] {
  background-image: linear-gradient(rgba(37, 128, 255, 0), rgba(33, 137, 255, 0.45));
  border: 0.641vh solid #1f8eff;
}

