@import "../../../styles/base.wxss";

.page {
  height: 100vh;
  white-space: nowrap;
  padding: 2.404vh 0;
}

/* 区块窗口 */

.scroll-box {
  height: 100vh;
  white-space: nowrap;
  padding: 2.404vh 0;
}

.scroll-view-bar {
  height: 100%;
  overflow-anchor: auto;
}

/* 每一个视频窗口 */

.pick-card {
  display: inline-block;
  height: 73.2vh;
  /* padding: 0 2.006vh; */
  margin-top: -36.6vh;
  position: relative;
  top: 50%;
  margin-left: 6.12vh;
}

/* .pick-card:first-child {
  margin-left: 4.968vh;
} */

.pick-card:last-child {
  margin-right: 12vh;
}
/* 每一个视频窗口尺寸 */

.pick-item {
  overflow: hidden;
  width: 64.103vh;
  height: 100%;
  border-radius: 1.923vh;
  /* background-image: linear-gradient(#26303f, #1c232e); */
  position: relative;
}

.pick-cover {
  width: 100%;
  height: 72.115vh;
  z-index: 1;
}

.pick-img {
  position: relative;
  width: 64.103vh;
  height: 33.81vh;
  overflow: hidden;
  margin-bottom: 2.43vh;
}

.pick-cardMiddle {
  height: 48vh;
}

.pick-cardSmall {
  height: 53vh;
}

.pick-tagBox {
  position: absolute;
  bottom: 2vh;
  left: 0;
  font-size: 3.5vh;
}

.pick-tag {
  background: #000000;
  border-radius: 1vh;
  padding: 0.4vh 1.97vh;
  margin-left: 2vh;
}

.pick-title {
  font-size: 4.89vh;
  display: flex;
  align-items: center;
  white-space: normal;
  padding: 0vh 2.7vh;
  height: 13.5vh;
  margin-bottom: 1.04vh;
}
.pick-address {
  padding: 0 2.7vh;
  text-overflow: ellipsis;
  white-space: nowrap;
  overflow: hidden;
  color: #c0c0c0;
  font-size: 4.27vh;
  margin-bottom: 4vh;
}
.pick-iconInfo {
  height: 12.27vh;
  display: flex;
  justify-content: center;
  align-items: center;
  border-top: 0.27vh solid #3c3c3c;
}
.pick-navTo {
  width: 9.81vh;
  height: 9.81vh;
  padding: 1vh 17%;
}
.pick-navTo:nth-child(2) {
  border-left: 0.27vh solid #3c3c3c;
}
.pick-iconOne {
  height: 12.27vh;
  line-height: 12.27vh;
  border-top: 1px solid #3c3c3c;
  text-align: center;
  font-size: 4.89vh;
}
.pick-navToOne {
  display: inline-block;
  width: 9.81vh;
  height: 9.81vh;
  vertical-align: middle;
}
