/* 白天模式 */

.light {
  color: rgba(82, 86, 102, 0.8);
}

.light .btn {
  color: #fff;
  background-color: #676e8a;
}

/* 夜间模式 */

.dark {
  color: rgba(255, 255, 255, 0.6);
}

.dark .btn {
  color: #fff;
  background-color: #596680;
}
