.container {
  width: 100%;
  height: 100vh;
  overflow: hidden;
  position: absolute;
  top: 0;
  left: 0;
  z-index: 9;
  display: flex;
  flex-direction: column;
}

.icon {
  display: block;
  width: 28.846vh;
  height: 28.846vh;
  margin: 0 auto;
  margin-top: 15vh;
}

.icon-blank {
  margin-top: 15vh;
}

.text {
  display: block;
  margin-top: 5.288vh;
  height: 8.013vh;
  line-height: 8.013vh;
  font-size: 5.769vh;
  text-align: center;
  white-space: pre-line;
}

.btn {
  display: block;
  margin: 0 auto;
  margin-top: 16vh;
  width: 72.115vh;
  height: 14.423vh;
  line-height: 14.423vh;
  font-size: 5.769vh;
}
