.container {
  width: 100%;
  height: 78vh;
  overflow: hidden;
  position: absolute;
  top: 22vh;
  left: 0;
  z-index: 9;
  display: flex;
  flex-direction: column;
  align-items: center;
  padding-top: 10vh;
}

.icon {
  display: block;
  width: 19.46vh;
  height: 19.46vh;
}

.icon-blank {
  margin-top: 18vh;
}

.text {
  display: block;
  margin-top: 3.3vh;
  height: 8.013vh;
  line-height: 8.013vh;
  font-size: 4.92vh;
  text-align: center;
  white-space: pre-line;
  color: #fff;
}
.n_text {
  font-size: 4vh;
  color: rgba(255,255,255, 0.7);
  margin-top: 1.7vh;
}

.btn {
  display: block;
  margin: 0 auto;
  margin-top: 5vh;
  width: 57.5vh;
  height: 13vh;
  line-height: 12.3vh;
  font-size: 5.5vh;
  border-radius: 1.5vh;
  background: rgba(255,255,255, 0.1)!important;
}
/* 
